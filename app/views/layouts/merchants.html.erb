<!DOCTYPE html>
<html>
<head>
  <title>PrettyQuick</title>
  <%= render 'layouts/head' %> 
</head>
<body>

<div class="topbar">
  <div class="topbar-inner">
    <div class="container-fluid">
      <%= link_to "Pretty Quick", root_url, :class => "brand"  %>
      <ul class="nav">
        <%= render "layouts/navigation" %>
      </ul>
      <p class="pull-right">
      <% if current_user %>
          Logged in as <%= current_user.email %>
          <%= link_to "Log out", log_out_path %>
      <% else %>            
        <%= form_tag sessions_path, :class=> "pull-right" do %>
            <%= text_field_tag :email, params[:email], :class => "input-small", :placeholder => "Username" %>
            <%= password_field_tag :password, params[:password], :class => "input-small", :placeholder => "Password" %>
            <%= submit_tag "Sign in"%>
        <% end %>
      <% end %>    
      </p>
      
    </div>   
  </div>
</div>      

<div class="container-fluid">

    <div class="sidebar">
      <%= render 'layouts/sidebar' %>
    </div>
                        
    <div class="content">
      <%= yield %>
    </div>
  
</div>


<%= yield :scripts %>
</body>
</html>
